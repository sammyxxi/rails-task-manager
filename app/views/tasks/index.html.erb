<div class="container">
  <div class="row justify-content-center">
    <div class="col-8 text-center">
      <h1 class="py-4 mb3 border-bottom">Task List 📝</h1>

      <div class="d-flex flex-column g-3">
        <% @tasks.each do |task| %>
          <div class="d-inline-flex justify-content-between card p-3">
            <div class="d-flex justify-content-start">
              <input type="checkbox" <%= 'checked' if task.completed %> class="me-3" >
              <%= link_to task.title, task_path(task) %>
            </div>

            <div class="d-flex justify-content-end">
              <%= link_to "Edit", edit_task_path(task), class: 'list-group-item' %>
              <%= link_to "Delete", task_path(task),
              data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'list-group-item' %>
            </div>
          </div>
        <% end %>
      </div>

      <%= link_to "Create a new task", new_task_path, class: 'btn btn-primary btn-lg w-100' %>
    </div>
  </div>
</div>
